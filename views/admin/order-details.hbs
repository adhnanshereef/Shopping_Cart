<section>
    <div class="container mt-5">
        <h3>User Details</h3>
        <p>Name: {{user.name}}</p>
        <p>Email: {{user.email}}</p>
        <p>Phone no: 1234567890</p>
       <div class="row" >
            <h3 class="mt-5">Products</h3>
        {{#each products}}
        <div class="col-md-4 scale" >
        <div class="card mb-5" style="width: 15rem;height: 26rem;">
  <img src="/product-images/{{this.item}}.jpg" style="height: 15rem;overflow-y: hidden;" class="card-img-top rounded scale" alt="">
  <div class="card-body">
    <h5 class="card-title">{{this.product.name}}</h5>
     <p class="card-text">â‚¹{{this.product.price}}</p>
     <p class="card-text">Quantity : {{this.quantity}}</p>
    <a href="/admin/product/{{this.item}}" class="btn btn-primary scale">View product</a>
  </div>
</div>
</div>
        
        {{/each}}
       </div>
    </div>
</section>