<section>
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/add-products" class="btn btn-success ml-auto" >Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width: 50px;" src="{{this._id}}.jpg" alt=""></td>
      <td>
        <a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
      </td>
      <td>
        <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}" onclick="return confirm('Do you want to delete {{this.name}}')" >Delete</a>

      </td>
    </tr>
      {{/each}}
  </tbody>
</table>
    </div>
</section>